<body>

<div class="card">
    <h2>Remind Helper</h2>

    <div class="form-group">
        <label for="reminderDate">Date</label>
        <input type="date" id="reminderDate">
    </div>

    <div class="form-group">
        <label for="reminderTime">Time</label>
        <input type="time" id="reminderTime">
    </div>

    <div class="form-group">
        <label for="reminderContent">Message</label>
        <input type="text" id="reminderContent" placeholder="E.g., meeting with team">
    </div>

    <button class="btn-generate" onclick="generateCode()">Generate Command</button>
    
    <textarea id="outputBox" readonly placeholder="!remind 2025-12-02 19:20 content"></textarea>
    
    <button class="btn-copy" id="copyBtn" onclick="copyText()">Copy Code</button>
</div>

<script>
    function generateCode() {
        // 1. Get values from inputs
        const content = document.getElementById('reminderContent').value;
        const date = document.getElementById('reminderDate').value;
        const time = document.getElementById('reminderTime').value;
        
        // 2. Simple validation
        if(!content || !date || !time) {
            alert("Please fill in Date, Time, and Message.");
            return;
        }

        // 3. New Format: !remind [YYYY-MM-DD] [HH:mm] [Content]
        const command = `!remind ${date} ${time} ${content}`;

        // 4. Output the result
        const outputBox = document.getElementById('outputBox');
        outputBox.value = command;

        // 5. Show the copy button
        document.getElementById('copyBtn').style.display = "block";
    }

    function copyText() {
        const copyText = document.getElementById("outputBox");
        copyText.select();
        copyText.setSelectionRange(0, 99999); // For mobile devices

        navigator.clipboard.writeText(copyText.value).then(() => {
            const btn = document.getElementById("copyBtn");
            const originalText = btn.innerText;
            btn.innerText = "Copied!";
            setTimeout(() => {
                btn.innerText = originalText;
            }, 2000);
        });
    }
    
    // Optional: Set default date to today
    document.getElementById('reminderDate').valueAsDate = new Date();
</script>

</body>
