<body>

<div class="card">
    <h2>Element Remind</h2>

    <div class="quick-actions">
        <button class="pill-btn" onclick="setTime(10, 0)">10:00 AM</button>
        <button class="pill-btn" onclick="setTime(11, 0)">11:00 AM</button>
        <button class="pill-btn" onclick="setTime(15, 30)">03:30 PM</button>
        <button class="pill-btn" onclick="setTime(16, 0)">04:00 PM</button>
    </div>

    <div class="form-group">
        <label>When</label>
        <div style="display: flex; gap: 10px;">
            <input type="date" id="reminderDate" onchange="updatePreview()">
            <input type="time" id="reminderTime" onchange="updatePreview()">
        </div>
    </div>

    <div class="form-group">
        <label>Message</label>
        <input type="text" id="reminderContent" placeholder="Meeting, Call, etc." onkeyup="updatePreview()" autocomplete="off">
    </div>
    
    <div class="result-area">
        <textarea id="outputBox" readonly></textarea>
    </div>
    
    <button class="btn-copy" id="copyBtn" onclick="copyAndSave()">Copy Command</button>
</div>

<div class="history-section" id="historySection" style="display:none;">
    <div class="history-title">
        <span>RECENTLY USED</span>
        <span style="cursor:pointer; color:var(--primary);" onclick="clearHistory()">Clear</span>
    </div>
    <div class="history-list" id="historyList"></div>
</div>

<script>
    // 1. Initialize Defaults
    const now = new Date();
    // Default to nearest 5 mins
    now.setMinutes(Math.ceil(now.getMinutes() / 5) * 5);
    updateInputs(now);
    renderHistory();

    // Helper to set date inputs
    function updateInputs(dateObj) {
        const dateStr = dateObj.toISOString().split('T')[0];
        const hours = String(dateObj.getHours()).padStart(2, '0');
        const minutes = String(dateObj.getMinutes()).padStart(2, '0');
        
        document.getElementById('reminderDate').value = dateStr;
        document.getElementById('reminderTime').value = `${hours}:${minutes}`;
        updatePreview();
    }

    // New Function: Set Specific Time
    function setTime(hour, minute) {
        const h = String(hour).padStart(2, '0');
        const m = String(minute).padStart(2, '0');
        document.getElementById('reminderTime').value = `${h}:${m}`;
        
        // Add visual feedback (flash the time input)
        const timeInput = document.getElementById('reminderTime');
        timeInput.style.backgroundColor = "var(--primary)";
        timeInput.style.color = "white";
        setTimeout(() => {
            timeInput.style.backgroundColor = "";
            timeInput.style.color = "";
        }, 300);

        updatePreview();
    }

    function updatePreview() {
        const content = document.getElementById('reminderContent').value.trim();
        const date = document.getElementById('reminderDate').value;
        const time = document.getElementById('reminderTime').value;
        const safeContent = content ? content : "[message]";
        
        // Format: !remind YYYY-MM-DD HH:MM Content
        document.getElementById('outputBox').value = `!remind ${date} ${time} ${safeContent}`;
    }

    function copyAndSave() {
        const outputBox = document.getElementById("outputBox");
        const content = document.getElementById('reminderContent').value.trim();
        
        if(content) {
            saveToHistory(content);
        }

        outputBox.select();
        outputBox.setSelectionRange(0, 99999);
        navigator.clipboard.writeText(outputBox.value).then(() => {
            const btn = document.getElementById("copyBtn");
            const originalText = btn.innerText;
            btn.innerText = "âœ… Copied!";
            btn.style.backgroundColor = "#28a745";
            setTimeout(() => {
                btn.innerText = originalText;
                btn.style.backgroundColor = "";
            }, 1500);
        });
    }

    function saveToHistory(msg) {
        let history = JSON.parse(localStorage.getItem('remindHistory') || '[]');
        history = history.filter(item => item !== msg);
        history.unshift(msg);
        if(history.length > 5) history.pop();
        localStorage.setItem('remindHistory', JSON.stringify(history));
        renderHistory();
    }

    function renderHistory() {
        const history = JSON.parse(localStorage.getItem('remindHistory') || '[]');
        const container = document.getElementById('historyList');
        const section = document.getElementById('historySection');
        
        if (history.length === 0) {
            section.style.display = 'none';
            return;
        }
        
        section.style.display = 'block';
        container.innerHTML = '';
        
        history.forEach(msg => {
            const div = document.createElement('div');
            div.className = 'history-item';
            div.innerText = msg;
            div.onclick = () => {
                document.getElementById('reminderContent').value = msg;
                updatePreview();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            };
            container.appendChild(div);
        });
    }

    function clearHistory() {
        localStorage.removeItem('remindHistory');
        renderHistory();
    }
</script>

</body>
</html>
